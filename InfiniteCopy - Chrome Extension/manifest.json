{
    "manifest_version": 3,
    "name": "InfiniteCopy",
    "version": "1.2.1",
    "description": "Copy anything, infinitely.",
    "author": "(ing) Studios Web Labs",
    "action": {
      "default_popup": "popup/extension.html",
      "default_title": "InfiniteCopy",
      "default_icon": "assets/logo.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "clipboardRead",
      "clipboardWrite",
      "contextMenus",
      "scripting",
      "notifications",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
        "48": "assets/logo.png"
    }
}
